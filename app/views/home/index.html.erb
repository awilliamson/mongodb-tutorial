<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html lang="en-US" dir="ltr" xmlns="http://www.w3.org/1999/xhtml">
<head>
  <title>MongoDB Interactive Tutorial</title>
  <meta name="description" content="Try MongoDB, a short interactive MongoDB tutorial" />
  <%= stylesheet_link_tag 'tutorial' %>
  <script type="text/javascript" src="//ajax.googleapis.com/ajax/libs/jquery/1.5.2/jquery.min.js"></script>
  <%= javascript_include_tag 'tutorial' %>
  <%= csrf_meta_tag %>
</head>
<body>
<div id="main">
  <div id="menu">
    <div id="speed" class="r">speed 2</div>
    <ul id="speedChoice" class="r">
      <li>0</li><li>1</li><li>2</li><li>3</li><li>4</li><li>5</li><li>6</li><li>7</li>
    </ul>
    <div id="info" class="r">click here to connect</div>
    <div id="lesson" class="r"></div>
  </div>
  <div id="explorer">
    <div id="collections">
      <h3>collections</h3>
      <ul></ul>
    </div>
  </div>

  <div id="container">
	  <div id="history"></div>
	  <textarea id="input"></textarea>
	  <div id="results">
	  </div>
  </div>
  <div id="pager">
    <div id="first" class="r"></div>
    <div id="prev" class="r"></div>
    <div id="next" class="r"></div>
    <div id="last" class="r"></div>
  </div>
</div>
<script type="text/javascript">
$(document).ready(function()
{
  $('#database').change(menu.database.change).val(context.database);
  context.initialize('<%=@context.host%>', 27017, <%=@databases.html_safe%>)
  $('#database').val('<%=@context.key%>').change();
  teacher.start();
});
var authenticity_token = <%=form_authenticity_token.inspect.html_safe%>;
</script>
</body>
</html>
